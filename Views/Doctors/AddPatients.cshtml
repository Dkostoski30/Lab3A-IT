@model Lab3.Models.Doctor

@{
    ViewBag.Title = "AddPatients";
}

<h2>AddPatients</h2>


@using (Html.BeginForm("AddPatientConfirm", "Doctors", new {id = Model.ID}))
{
    @Html.AntiForgeryToken()
    
<div class="form-horizontal">
    <h4>Doctor</h4>
    <hr />
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    @Html.HiddenFor(model => model.ID)
    @Html.HiddenFor(model => model.Age)

    <div class="form-group">

        <div class="col-md-10">
            @Html.DisplayFor(model => model.Name)
        </div>
    </div>
    <div class="form-group">

        <div class="col-md-10">
            @Html.DropDownList("Patients", (SelectList)ViewBag.Patients, "Select a Patient", new { @class = "form-control" })
        </div>
    </div>
    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" value="Save" class="btn btn-default" />
        </div>
    </div>
</div>
}

<div>
    @Html.ActionLink("Back to List", "Index")
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
